<!-- including the header.ejs file using ejs syntax -->
<%- include('header') -%>

<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold">Login System</h2>
            <span>LogIn for the existing user</span>

            <% if(locals.logout){%>
                <div class="alter alert-success text-center">
                    <%=logout %>
                </div>
            <%}%>
        </div>
        <form action="/route/login" method="POST">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email">
                <small class="form-text text-muted text-left white">Register email address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-success my-2">Submit</button>
        </form>
    </div>
</div>

<!-- including the footer.ejs file using ejs syntax -->
<%- include('footer') -%>
